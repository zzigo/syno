{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noEmit": false,
    "outDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "lib": ["esnext", "dom", "webworker"],
    "types": ["node", "obsidian"],
    "resolveJsonModule": true
  },
  "include": [
    "src/main.ts",
    "src/parser.ts",
    "src/audio.ts",
    "src/nodeFactory.ts",
    "src/transitions.ts",
    "src/generators.ts",
    "src/processors.ts",
    "src/renderer.ts",
    "src/matdisp.ts"
  ],
  "exclude": ["node_modules"]
}